<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".CallPhoneActivity">
    <Button
        android:id="@+id/btn_call"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/edt_no"
        android:layout_marginTop="10dp"
        android:text="call phone" />

    <Button

        android:id="@+id/btn_tampil_call"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/btn_call"
        android:layout_marginTop="10dp"
        android:text="tampil no hp" />

    <Button
        android:id="@+id/btn_list_contact"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/btn_tampil_call"
        android:layout_marginTop="10dp"
        android:text="list contact" />

    <EditText
        android:id="@+id/edt_no"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Number Phone"
        android:inputType="numberDecimal" />
</RelativeLayout>